<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/stop_button2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/circle"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/alarm_text2"
        android:layout_width="314dp"
        android:layout_height="231dp"
        android:gravity="center"
        android:text="3"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/stop_button"
        app:layout_constraintStart_toStartOf="@+id/stop_button"
        app:layout_constraintTop_toTopOf="@+id/stop_button" />

    <View
        android:id="@+id/view"
        android:layout_width="574dp"
        android:layout_height="256dp"
        android:background="@color/lightblue"
        tools:layout_editor_absoluteX="-29dp"
        tools:layout_editor_absoluteY="-1dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="367dp"
        android:layout_height="327dp"
        android:layout_marginTop="48dp"
        android:text="Jeżeli wszystko jest w porządku naciśnij przycisk trzy razy"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alarm_text4"
        android:layout_width="206dp"
        android:layout_height="190dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="3"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/stop_button2"
        app:layout_constraintEnd_toEndOf="@+id/stop_button2"
        app:layout_constraintStart_toStartOf="@+id/stop_button2"
        app:layout_constraintTop_toTopOf="@+id/stop_button2" />
</androidx.constraintlayout.widget.ConstraintLayout>