<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="546dp"
        android:layout_height="208dp"
        android:background="@color/lightblue"
        tools:layout_editor_absoluteX="-6dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/ALARM"
        android:layout_width="282dp"
        android:layout_height="153dp"
        android:fontFamily="@font/trebucbd"
        android:text="ALARM"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="75dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/dla_bliskich"
        android:layout_width="286dp"
        android:layout_height="88dp"
        android:fontFamily="@font/trebucbd"
        android:text="dla bliskich"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        app:backgroundTint="@null"
        android:id="@+id/imie"
        android:layout_width="408dp"
        android:layout_height="120dp"
        android:layout_marginBottom="648dp"
        android:background="@drawable/cylindric_empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/logowanie"
        android:layout_width="408dp"
        android:layout_height="120dp"
        android:layout_marginBottom="336dp"
        android:background="@drawable/cylindric_empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imie"
        app:layout_constraintVertical_bias="0.296" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="325dp"
        android:layout_height="113dp"
        android:fontFamily="@font/trebucbd"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@+id/imie"
        app:layout_constraintEnd_toEndOf="@+id/imie"
        app:layout_constraintStart_toStartOf="@+id/imie" />

    <EditText
        android:id="@+id/pass_1"
        android:layout_width="320dp"
        android:layout_height="106dp"
        android:fontFamily="@font/trebucbd"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@+id/logowanie"
        app:layout_constraintEnd_toEndOf="@+id/logowanie"
        app:layout_constraintStart_toStartOf="@+id/logowanie" />

    <TextView
        android:layout_width="410dp"
        android:layout_height="39dp"
        android:layout_marginStart="242dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="268dp"
        android:fontFamily="@font/trebucbd"
        android:text="hasło:"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="410dp"
        android:layout_height="39dp"
        android:layout_marginStart="242dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="268dp"
        android:fontFamily="@font/trebucbd"
        android:text="powtórz hasło:"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>