<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="545dp"
        android:layout_height="195dp"
        android:fontFamily="@font/trebucbd"
        android:text="Kiedy klikniesz na symbol +, będziesz mógł dodać bliskich."
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textColorLink="@color/blue"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="346dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="545dp"
        android:layout_height="320dp"
        android:fontFamily="@font/trebucbd"
        android:text="Bliscy dostają wiadomość, gdy upadniesz, lub wezwiesz ich za pomocą widgetu."
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textColorLink="@color/blue"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="541dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="389dp"
        android:layout_height="112dp"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/trebucbd"
        android:text="kliknij ekran, aby przejść dalej"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textColorLink="@color/blue"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="544dp"
        android:layout_height="162dp"
        android:background="@color/lightblue"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="-1dp" />

    <TextView
        android:id="@+id/ALARM"
        android:layout_width="252dp"
        android:layout_height="144dp"
        android:fontFamily="@font/trebucbd"
        android:text="ALARM"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/dla_bliskich"
        android:layout_width="286dp"
        android:layout_height="88dp"
        android:fontFamily="@font/trebucbd"
        android:text="dla bliskich"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>