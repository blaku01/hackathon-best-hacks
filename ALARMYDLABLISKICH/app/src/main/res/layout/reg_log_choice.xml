<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="546dp"
        android:layout_height="208dp"
        android:background="@color/lightblue"
        tools:layout_editor_absoluteX="-6dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/ALARM"
        android:layout_width="282dp"
        android:layout_height="153dp"
        android:fontFamily="@font/trebucbd"
        android:text="ALARM"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="75dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/dla_bliskich"
        android:layout_width="286dp"
        android:layout_height="88dp"
        android:fontFamily="@font/trebucbd"
        android:text="dla bliskich"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/imie"
        android:layout_width="408dp"
        android:layout_height="120dp"
        android:layout_marginBottom="648dp"
        android:background="@drawable/cylindric_register"
        android:fontFamily="@font/trebucbd"
        android:text="@string/rejestracja"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/logowanie"
        android:layout_width="408dp"
        android:layout_height="120dp"
        android:layout_marginBottom="336dp"
        android:background="@drawable/cylindric_register"
        android:fontFamily="@font/trebucbd"
        android:text="logowanie"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imie"
        app:layout_constraintVertical_bias="0.296" />

</androidx.constraintlayout.widget.ConstraintLayout>